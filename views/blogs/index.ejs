<% layout('layouts/boilerplate')%>

<div class="container about-page">
<h1>bloggy</h1>
<% if(blogs.length < 1) { %>
<em>coming soon</em>

<% } %>
<% for(let blg of blogs) { %>
<div class="accordion" id="accordion">
    <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%=blg.id%>">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=blg.id%>" aria-expanded="false" aria-controls="collapse<%=blg.id%>">
                <%= blg.blogTitle %>
            </button>
          </h2>
          <div id="collapse<%=blg.id%>" class="accordion-collapse collapse" aria-labelledby="heading<%=blg.id%>" data-bs-parent="#accordion">
            <div class="accordion-body">
                <p><%= blg.blogDescription %></p>
                <a class="btn btn-warning" href="/blogs/<%=blg.id%>">View <%= blg.blogTitle %></a>
            </div>
          </div>
    </div>
<% } %>
</div>



</div>

