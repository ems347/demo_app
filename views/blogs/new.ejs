<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">new blog</h1>
    <div class="col-6 offset-3">
        <form action="/blogs" method="post" novalidate class="validated-form">
           <div class="mb-3">
            <label for="blogTitle" class="form-label" id="blogTitle">title</label>
            <input type="text" class="form-control" name="blogTitle" id="blogTitle" placeholder="thot shit" required>
           </div>
            <div class="mb-3">
                <label for="blogDescription" class="form-label" id="blogDescription"> description</label>
                <input type="textarea" rows="5" class="form-control" name="blogDescription" id="blogDescription" placeholder="i am a hottie with a body" required>
            </div>
              <div class="mb-3">
                <button class="btn btn-success">submit</button>
            </div>
        </form>
    </div>
</div>

