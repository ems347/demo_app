<% layout('layouts/boilerplate')%>


<div class="card" mb-3 mt-4>
    <div class="row">

        <div class="col-md-8">
            <div class="card-body">
                <h1 class="card-title"><%= blogs.blogTitle %></h1>
                <p class="card-body">
                    <%= blogs.blogDescription %> </p>
                <% if(currentUser) {%>
                <a class="btn btn-info" href="/blogs/<%=blogs.id%>/edit">Edit <%= blogs.blogTitle %></a>
                <form action="/blogs/<%=blogs.id%>?_method=DELETE" method="POST"><button class="btn btn-danger">Delete <%= blogs.blogTitle %></button></form>
                <% } %>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-success" href="/blogs" mb-3>back to blog index</a><br>



