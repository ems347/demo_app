<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">edit submission</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/submissions/<%=plastic._id%>?_method=PUT" novalidate class="validated-form">
            <div class="mb-3">
                <label for="address" class="form-label" id="address">full address of photo location</label>
                <input type="text" class="form-control" name="address" id="address" required value="<%=plastic.address%>">
            </div>
            <!-- <div class="mb-3">
                <label for="coordinates" class="form-label" id="coordinates">coordinates</label>
                <input type="text" class="form-control" name="coordinates" id="coordinates" required value="<%=plastic.geometry.coordinates%>">
               </div> -->
           <div class="mb-3">
            <label for="title" class="form-label" id="title">image title</label>
            <input type="text" class="form-control" name="title" id="title" required value="<%=plastic.title%>">
           </div>
            <div class="mb-3">
                <label for="description"  class="form-label" id="description">image description</label>
                <input type="textarea" class="form-control" name="description" required id="description" value="<%=plastic.description%>"><br>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Save changes</button>
            </div>
        </form>
        <a class="btn btn-warning" href="/submissions">Cancel changes</a>
    </div>
</div>






