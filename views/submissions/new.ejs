<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">new photo</h1>
    <div class="col-6 offset-3">
        <form action="/submissions" method="post" enctype="multipart/form-data" novalidate class="validated-form">
            <div class="mb-3">
                <label for="address" class="form-label" id="address">full address of photo location [including country - as much info as you can provide for most accurate results]</label>
                <input type="text" class="form-control" name="address" id="address" placeholder="31 Drumcullen Rd, Dungannon, Northern Ireland">
            </div>
           <div class="mb-3">
            <label for="title" class="form-label" id="title">image title</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="thot shit" required>
           </div>
            <div class="mb-3">
                <label for="description" class="form-label" id="description">image description</label>
                <input type="textarea" class="form-control" name="description" id="description" placeholder="i am a hottie with a body" required>
            </div>
            <div class="mb-3">
                <label for="notes" class="form-label" id="notes">private notes (not displayed publicly)</label>
                <input type="textarea" class="form-control" name="notes" id="notes" placeholder="i saw a hottie with a body" required>
            </div>
            <div class="mb-3">
                <input type="file" name="image" id="">
            </div>
              <div class="mb-3">
                <button class="btn btn-success">submit</button>
            </div>
        </form>
    </div>
</div>