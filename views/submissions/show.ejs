<% layout('layouts/boilerplate')%>


<div class="card" mb-3 mt-4>
    <div class="row">
        <% for(let img of plastic.image) { %>
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=img.url%>">
            </div>
        <% } %>
        <div class="col-md-8">
            <div class="card-body">
                <h1 class="card-title"><%= plastic.title %></h1>
                <p class="card-body">
                    <strong>description:</strong> <%= plastic.description %>
                <br><strong>location:</strong> <%= plastic.address %></p>
                <% if(currentUser) {%>
                <p><strong>private notes:</strong> <%= plastic.notes %></p>
                <a class="btn btn-info" href="/submissions/<%=plastic.id%>/edit">Edit <%= plastic.title %></a>
                <form action="/submissions/<%=plastic.id%>?_method=DELETE" method="POST"><button class="btn btn-danger">Delete <%= plastic.title %></button></form>
                <% } %>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-success" href="/" mb-3>back to the map</a><br>



